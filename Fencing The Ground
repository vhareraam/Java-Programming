import java.util.Scanner;
public class Main
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int l,b;
        l=sc.nextInt();
        b=sc.nextInt();
        System.out.println("Required length is "+(2*(l+b))+"m");
        System.out.println("Required quantity of carpet is "+l*b+"sqm");
    }
}
