import java.util.Scanner;
public class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n,i,j;
        n=sc.nextInt();
        for(i=1;i<=n;i++)
        {
            for(j=1;j<=n-i;j++)
            {
                System.out.print(" ");
            }
            for(j=1;j<=i;j++)
            {
                if(j==1 || j==i)
                System.out.print("* ");
                else
                System.out.print("  ");
            }
            System.out.println();
        }
            for(i=n-1;i>=1;i--)
        {
            for(j=i;j<=n-1;j++)
            {
                System.out.print(" ");
            }
            for(j=1;j<=i;j++)
            {
                if(j==1 || j==i)
                System.out.print("* ");
                else
                System.out.print("  ");
            }
            System.out.println();
        }
        
    }
}
